generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     String
  name      String
  price     Float
  colors    String[]
  sizes     String[]
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstname String
  lastname  String
  role      String
  orders    Order[]
}

model Order {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products  Json
  total     Float
  fulfilled Boolean
  address   String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Restrict, onUpdate: Restrict)
  userId    String
}
